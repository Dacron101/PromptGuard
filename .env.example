# Anthropic Claude API Key
ANTHROPIC_API_KEY=sk-ant-...

# Stripe Secret Key (use test key: sk_test_...)
STRIPE_SECRET_KEY=sk_test_...

# Firebase Admin SDK config (from your service account JSON)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# Paste the private key with literal \n characters (the whole key in quotes)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Express server port
PORT=3000

# VirusTotal API Key (for DeepScanVerifier)
VT_API_KEY=your-virustotal-api-key-here

# Firecracker MicroVM Configuration (for --deep-scan mode)
FC_KERNEL_PATH=./vmlinux
FC_ROOTFS_PATH=./rootfs.ext4
FC_VM_IP=172.16.0.2
FC_SSH_KEY_PATH=~/.ssh/firecracker_id_rsa
